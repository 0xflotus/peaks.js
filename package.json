{
  "name": "peaks.js",
  "version": "0.3.0-beta.5",
  "description": "Frontend app for displaying audio waveforms",
  "main": "./src/main.js",
  "contributors": [
    "Chris Finch (https://github.com/chrisfinch)",
    "Thomas Parisot <thomas.parisot@bbc.co.uk> (https://github.com/oncletom)",
    "Chris Needham (https://github.com/chrisn)"
  ],
  "browserify": {
    "transform": [
      "deamdify"
    ]
  },
  "browser": {
    "EventEmitter": "./bower_components/eventemitter2/lib/eventemitter2.js",
    "Kinetic": "./bower_components/KineticJS/index.js",
    "waveform-data": "./bower_components/waveform-data/waveform-data.js",
    "peaks/player/player": "./src/main/player/player.js",
    "peaks/player/player.keyboard": "./src/main/player/player.keyboard.js",
    "peaks/waveform/waveform.axis": "./src/main/waveform/waveform.axis.js",
    "peaks/waveform/waveform.core": "./src/main/waveform/waveform.core.js",
    "peaks/waveform/waveform.mixins": "./src/main/waveform/waveform.mixins.js",
    "peaks/waveform/waveform.overview": "./src/main/waveform/waveform.overview.js",
    "peaks/waveform/waveform.points": "./src/main/waveform/waveform.points.js",
    "peaks/waveform/waveform.segments": "./src/main/waveform/waveform.segments.js",
    "peaks/waveform/waveform.zoomview": "./src/main/waveform/waveform.zoomview.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/bbcrd/peaks.js.git"
  },
  "license": "LGPL 3",
  "scripts": {
    "test": "npm run test-pre && if [$CI]; then npm run test-ci; else npm run test-local; fi",
    "test-local": "./node_modules/karma/bin/karma start --single-run",
    "test-ci": "npm run test-webkit && npm run test-firefox && npm run test-ie",
    "test-ie": "./node_modules/karma/bin/karma start --browsers SauceIE9,SauceIE10,SauceIE11",
    "test-webkit": "./node_modules/karma/bin/karma start --browsers SauceChrome,SauceSafari6,SauceSafari7",
    "test-firefox": "./node_modules/karma/bin/karma start --browsers SauceFirefox,SauceFirefoxLinux",
    "build": "browserify -t deamdify ./src/main.js -p [minifyify --map peaks.min.map --output dist/peaks.min.map] -s peaks -o dist/peaks.min.js",
    "test-pre": "jshint ./src",
    "test-watch": "FAST=true ./node_modules/karma/bin/karma start --auto-watch --no-single-run",
    "changelog": "github-changes -o bbcrd -r peaks.js -n ${npm_package_version} -a --only-pulls --use-commit-body",
    "start": "http-server -o"
  },
  "devDependencies": {
    "chai": "~1.9.1",
    "github-changes": "^0.0.10",
    "http-server": "^0.6.1",
    "jshint": "^2.5.1",
    "karma": "~0.12.0",
    "karma-sinon-chai": "~0.2.0",
    "karma-chrome-launcher": "~0.1.0",
    "karma-firefox-launcher": "~0.1.0",
    "karma-html2js-preprocessor": "~0.1",
    "karma-mocha": "~0.1.7",
    "karma-phantomjs-launcher": "~0.1.0",
    "karma-requirejs": "~0.1.0",
    "karma-safari-launcher": "~0.1.1",
    "karma-sauce-launcher": "~0.2.10",
    "minifyify": "^3.0.11",
    "mocha": "~1.17.1"
  },
  "dependencies": {
  },
  "optionalDependencies": {
    "browserify": "^4.2.0",
    "deamdify": "^0.1.1"
  }
}
